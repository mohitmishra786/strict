# STRICT Environment Configuration
# Copy this file to .env.local and fill in your values

# Security - REQUIRED
# User to fill
STRICT_SECRET_KEY=

# Runtime Configuration (optional)
STRICT_DEBUG=false
STRICT_LOG_LEVEL=INFO

# Processing Configuration (optional)
STRICT_MAX_RETRIES=3
STRICT_TIMEOUT_SECONDS=30.0

# Processor Configuration (optional)
# User to fill if using cloud processors
STRICT_CLOUD_ENDPOINT=
STRICT_LOCAL_MODEL_PATH=
STRICT_TOKEN_THRESHOLD=500

# Failover Configuration (optional)
STRICT_ENABLE_FAILOVER=true
STRICT_CLOUD_FAILURE_PROBABILITY=0.01
STRICT_LOCAL_FAILURE_PROBABILITY=0.05
