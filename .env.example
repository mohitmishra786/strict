# Vaak Environment Configuration
# Copy this file to .env.local and fill in your values

# Security - REQUIRED
# User to fill
VAAK_SECRET_KEY=

# Runtime Configuration (optional)
VAAK_DEBUG=false
VAAK_LOG_LEVEL=INFO

# Processing Configuration (optional)
VAAK_MAX_RETRIES=3
VAAK_TIMEOUT_SECONDS=30.0

# Processor Configuration (optional)
# User to fill if using cloud processors
VAAK_CLOUD_ENDPOINT=
VAAK_LOCAL_MODEL_PATH=
VAAK_TOKEN_THRESHOLD=500

# Failover Configuration (optional)
VAAK_ENABLE_FAILOVER=true
VAAK_CLOUD_FAILURE_PROBABILITY=0.01
VAAK_LOCAL_FAILURE_PROBABILITY=0.05
